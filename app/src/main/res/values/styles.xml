<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="RippleBottomNavigation">
        <item name="itemBackground">?android:selectableItemBackground</item>
    </style>

    <style name="EventTextView">
        <item name="android:textSize">@dimen/calendar_header_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:background">@color/colorLime</item>
    </style>

    <style name="MoreEventTextView">
        <item name="android:textSize">@dimen/calendar_header_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:text">...</item>
    </style>

</resources>
