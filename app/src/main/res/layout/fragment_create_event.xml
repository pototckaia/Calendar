<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clEventInfoContainer"
>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbNoteCreate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/toolbarBackground"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?attr/homeAsUpIndicator">
    </androidx.appcompat.widget.Toolbar>


    <EditText
            android:id="@+id/etTextEvent"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="wrap_content"
            android:hint="@string/default_event_text"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tbNoteCreate"
            android:inputType=""
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    <com.example.calendar.customView.DayHourView
            android:id="@+id/vBegin"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="wrap_content"

            app:label_name="@string/begin_label_name"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etTextEvent"
            app:layout_constraintBottom_toTopOf="@id/vEnd"
            android:paddingStart="0dp"
            android:paddingEnd="10dp">
    </com.example.calendar.customView.DayHourView>

    <com.example.calendar.customView.DayHourView
            android:id="@+id/vEnd"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="wrap_content"
            app:label_name="@string/end_label_name"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vBegin"
            android:paddingStart="0dp"
            android:paddingEnd="10dp">
    </com.example.calendar.customView.DayHourView>

    <TextView
            android:id="@+id/tvTitleRecurrence"
            android:text="Повторение:"

            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"

            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:gravity="center|end"

            app:layout_constraintBottom_toBottomOf="@id/etRecurrenceRule"
            app:layout_constraintTop_toTopOf="@id/etRecurrenceRule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etRecurrenceRule"

    />

    <EditText
            android:id="@+id/etRecurrenceRule"

            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"

            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"

            app:layout_constraintTop_toBottomOf="@id/vEnd"
            app:layout_constraintStart_toEndOf="@id/tvTitleRecurrence"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/tvTitleTimeZone"
            android:text="Временая зона"

            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"

            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:gravity="center|end"

            app:layout_constraintBottom_toBottomOf="@id/tvTimeZone"
            app:layout_constraintTop_toTopOf="@id/tvTimeZone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTimeZone"
    />

    <TextView
            android:id="@+id/tvTimeZone"

            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"

            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"

            android:textColor="@android:color/background_dark"
            android:gravity="center|start"

            app:layout_constraintTop_toBottomOf="@id/etRecurrenceRule"
            app:layout_constraintStart_toEndOf="@id/tvTitleTimeZone"
            app:layout_constraintEnd_toEndOf="parent"

            tools:text="ddd"
    />

</androidx.constraintlayout.widget.ConstraintLayout>