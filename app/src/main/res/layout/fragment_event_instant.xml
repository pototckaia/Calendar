<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clEventInfoContainer"
>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbEventInstance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/toolbarBackground"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
            app:navigationIcon="?attr/homeAsUpIndicator"

            app:layout_constraintTop_toTopOf="parent"
    >
    </androidx.appcompat.widget.Toolbar>

    <com.example.calendar.customView.EventRequestView
            android:id="@+id/vEventRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/tbEventInstance"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
    </com.example.calendar.customView.EventRequestView>

    <EditText
            android:id="@+id/etOwner"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:hint="Владелец"
            android:textSize="20sp"
            android:focusable="false"
            android:inputType="none"
            android:cursorVisible="false"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivUser"
            app:layout_constraintTop_toBottomOf="@id/vEventRequest"
    />

    <ImageView
            android:id="@+id/ivUser"
            android:layout_height="35dp"
            android:layout_width="40dp"
            app:srcCompat="@drawable/users"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etOwner"
            app:layout_constraintBottom_toBottomOf="@id/etOwner"
    />

    <EditText
            android:id="@+id/etTasks"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:hint="Просмотреть задачи"
            android:textSize="20sp"
            android:focusable="false"
            android:inputType="none"
            android:cursorVisible="false"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivUser"
            app:layout_constraintTop_toBottomOf="@id/etOwner"
    />

    <ImageView
            android:id="@+id/ivTask"
            android:layout_height="35dp"
            android:layout_width="40dp"
            app:srcCompat="@drawable/list"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etTasks"
            app:layout_constraintBottom_toBottomOf="@id/etTasks"
    />

    <com.example.calendar.customView.EventPatternRequestView
            android:id="@+id/vEventPatternRequest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="spread"

            app:layout_constraintTop_toBottomOf="@id/etTasks"
            app:layout_constraintBottom_toTopOf="@id/bnvEventInstance"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
    </com.example.calendar.customView.EventPatternRequestView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnvEventInstance"
            android:layout_width="0dp"
            app:layout_constraintHeight_default="spread"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            app:menu="@menu/bottom_menu_event_instance"
            style="@style/RippleBottomNavigation"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>